<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CityHall Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold mb-2">üèôÔ∏è CityHall Dashboard</h1>
            <p class="text-gray-600">Real-time Storage Engine Monitoring</p>
        </div>

        <!-- Top Stats Cards -->
        <div class="grid grid-cols-4 gap-4 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-sm text-gray-500">Total Writes</div>
                <div id="totalWrites" class="text-3xl font-bold text-blue-600">-</div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-sm text-gray-500">Total Reads</div>
                <div id="totalReads" class="text-3xl font-bold text-green-600">-</div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-sm text-gray-500">Read Hit Rate</div>
                <div id="readHitRate" class="text-3xl font-bold text-purple-600">-</div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <div class="text-sm text-gray-500">Uptime</div>
                <div id="uptime" class="text-3xl font-bold">-</div>
            </div>
        </div>

        <!-- Storage Engine Stats -->
        <div class="bg-white p-6 rounded-lg shadow mb-8">
            <h3 class="text-lg font-semibold mb-4">üìä Storage Engine Metrics</h3>
            <div class="grid grid-cols-4 gap-4">
                <div>
                    <div class="text-sm text-gray-500">MemTable Size</div>
                    <div id="memtableSize" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">MemTable Entries</div>
                    <div id="memtableEntries" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">SSTable Count</div>
                    <div id="sstableCount" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Disk Usage</div>
                    <div id="diskUsage" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Flushes</div>
                    <div id="flushesTotal" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Compactions</div>
                    <div id="compactionsTotal" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Write Amplification</div>
                    <div id="writeAmplification" class="text-2xl font-bold">-</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Bloom FP Rate</div>
                    <div id="bloomFpRate" class="text-2xl font-bold">-</div>
                </div>
            </div>
        </div>

        <!-- Charts Row 1: Latency -->
        <div class="grid grid-cols-2 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-lg font-semibold mb-4">Write Latency (Œºs)</h3>
                <canvas id="writeLatencyChart"></canvas>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="text-lg font-semibold mb-4">Read Latency (Œºs)</h3>
                <canvas id="readLatencyChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        // Chart setup
        const writeLatencyChart = new Chart(document.getElementById('writeLatencyChart'), {
            type: 'bar',
            data: {
                labels: ['p50', 'p99'],
                datasets: [{
                    label: 'Latency (Œºs)',
                    data: [0, 0],
                    backgroundColor: ['rgba(59, 130, 246, 0.5)', 'rgba(239, 68, 68, 0.5)'],
                }]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true } }
            }
        });

        const readLatencyChart = new Chart(document.getElementById('readLatencyChart'), {
            type: 'bar',
            data: {
                labels: ['p50', 'p99'],
                datasets: [{
                    label: 'Latency (Œºs)',
                    data: [0, 0],
                    backgroundColor: ['rgba(16, 185, 129, 0.5)', 'rgba(245, 158, 11, 0.5)'],
                }]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true } }
            }
        });

        async function updateDashboard() {
            try {
                const res = await fetch('/api/metrics');
                const data = await res.json();

                // Update top cards
                document.getElementById('totalWrites').textContent = data.storage_metrics.writes_total.toLocaleString();
                document.getElementById('totalReads').textContent = data.storage_metrics.reads_total.toLocaleString();
                document.getElementById('readHitRate').textContent = (data.storage_metrics.read_hit_rate * 100).toFixed(1) + '%';
                document.getElementById('uptime').textContent = formatUptime(data.uptime_seconds);

                // Update storage metrics
                document.getElementById('memtableSize').textContent = data.storage_metrics.memtable_size_mb.toFixed(2) + ' MB';
                document.getElementById('memtableEntries').textContent = data.storage_metrics.memtable_entries.toLocaleString();
                document.getElementById('sstableCount').textContent = data.storage_metrics.sstable_count;
                document.getElementById('diskUsage').textContent = data.storage_metrics.disk_usage_mb.toFixed(2) + ' MB';
                document.getElementById('flushesTotal').textContent = data.storage_metrics.flushes_total;
                document.getElementById('compactionsTotal').textContent = data.storage_metrics.compactions_total;
                document.getElementById('writeAmplification').textContent = data.storage_metrics.write_amplification.toFixed(2) + 'x';
                document.getElementById('bloomFpRate').textContent = (data.storage_metrics.bloom_filter_fp_rate * 100).toFixed(2) + '%';

                // Update latency charts
                writeLatencyChart.data.datasets[0].data = [
                    data.storage_metrics.write_latency_p50_us,
                    data.storage_metrics.write_latency_p99_us
                ];
                writeLatencyChart.update();

                readLatencyChart.data.datasets[0].data = [
                    data.storage_metrics.read_latency_p50_us,
                    data.storage_metrics.read_latency_p99_us
                ];
                readLatencyChart.update();

            } catch (e) {
                console.error('Failed to fetch metrics:', e);
            }
        }

        function formatUptime(seconds) {
            const h = Math.floor(seconds / 3600);
            const m = Math.floor((seconds % 3600) / 60);
            return `${h}h ${m}m`;
        }

        function formatBytes(bytes) {
            if (bytes < 1024) return bytes + ' B';
            if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
            return (bytes / 1048576).toFixed(1) + ' MB';
        }

        // Auto-refresh every second
        setInterval(updateDashboard, 1000);
        updateDashboard();
    </script>
</body>
</html>